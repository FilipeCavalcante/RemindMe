{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": [
            "es6"
        ],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": "./",
        "paths": {
            "@pages/*": ["./src/pages/*"],
            "@components/*": ["./src/components/*"],
            "@shared/*": ["./src/shared/*"],
            "@assets/*": ["./src/assets/*"],
            "@routes/*": ["./src/routes/*"],
        },
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}